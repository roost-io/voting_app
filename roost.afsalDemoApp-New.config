build:
  type: text
  content: >
    #!/bin/sh

    docker build -f ballot/Dockerfile -t ballot:$ROOST_ENV_ID .

    docker build -f ecserver/Dockerfile -t ecserver:$ROOST_ENV_ID .

    docker build -f election-commission/Dockerfile -t election-commission:$ROOST_ENV_ID .

    docker build -f service-test-suite/Dockerfile -t service-test-suite:$ROOST_ENV_ID .

    docker build -f voter/Dockerfile -t voter:$ROOST_ENV_ID .
deploy:
  type: text
  content: |-
    #!/bin/sh
    helm install helm-vote -n $ROOST_NAMESPACE --generate-name
test:
  - name: ballot
    configType: artillery
    configPath: ballot/test/test.yaml
  - name: ecserver
    configType: artillery
    configPath: ecserver/test/test.yaml
  - name: service-test-suite
    configType: artillery
    configPath: service-test-suite/test-suite.yaml
